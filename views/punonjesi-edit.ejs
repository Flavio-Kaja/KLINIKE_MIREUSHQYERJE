<html>
  <head>
    <title>Ndrysho te dhenat e nje punonjesi</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>

  <%- include('partial/navbar.ejs') %>
  <body>
    <div class="container">
      <h1>Edito punonjes</h1>
      <form action="/punonjesi/edit/<%= punonjesi.E_id %>" method="POST">
        <div class="mb-3">
          <input
            type="hidden"
            class="form-control"
            id="e_id"
            name="e_id"
            required
          />
        </div>
        <div class="mb-3">
          <label for="emri" class="form-label">Emri:</label>
          <input
            type="text"
            class="form-control"
            value="<%= punonjesi.Emri %>"
            id="emri"
            name="emri"
          />
        </div>
        <div class="mb-3">
          <label for="mbiemri" class="form-label">Mbiemri:</label>
          <input
            type="text"
            class="form-control"
            value="<%= punonjesi.Mbiemri %>"
            id="mbiemri"
            name="mbiemri"
          />
        </div>
        <div class="mb-3">
          <label for="roli">Roli:</label>

          <select
            id="roli"
            name="roli"
            class="form-select"
            value="<%= punonjesi.Roli %>"
            aria-label="Roli"
          >
            <option value="1">Dietolog</option>
            <option value="2">Analist</option>
            <option value="3">Konsulence</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="adresa" class="form-label">Adresa:</label>
          <input
            type="text"
            class="form-control"
            id="adresa"
            value="<%= punonjesi.Adresa %>"
            name="adresa"
          />
        </div>
        <div class="mb-3">
          <label for="nr_telefoni" class="form-label">Nr Telefoni:</label>
          <input
            value="<%= punonjesi.Adresa %>"
            type="text"
            class="form-control"
            id="nr_telefoni"
            name="nr_telefoni"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input
            type="email"
            value="<%= punonjesi.Email %>"
            class="form-control"
            id="email"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="paga" class="form-label">Paga:</label>
          <input
            type="number"
            value="<%= punonjesi.Paga %>"
            class="form-control"
            id="paga"
            name="paga"
          />
        </div>
        <div class="mb-3">
          <label for="passwordi" class="form-label">Passwordi:</label>
          <input
            required
            type="password"
            class="form-control"
            id="passwordi"
            name="passwordi"
          />
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-primary">
            Konfirmo editimin
          </button>
          <a href="/punonjes" class="btn btn-secondary">Kthehu te lista</a>
        </div>
      </form>
    </div>
  </body>
</html>
