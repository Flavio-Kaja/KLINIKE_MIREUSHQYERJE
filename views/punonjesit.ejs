<!DOCTYPE html>
<html>
  <head>
    <title>Punonjesit</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>

  <%- include('partial/navbar.ejs') %>
  <body>
    <div class="container mt-3">
      <h1 class="mb-3">Punonjesit</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Emri</th>
            <th>Mbiemri</th>
            <th>Roli</th>
            <th>Adresa</th>
            <th>Nr_telefoni</th>
            <th>Email</th>
            <th>Paga</th>
            <th>Veprime</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < punonjesit.length; i++) { %>
          <tr>
            <td><%= punonjesit[i].Emri %></td>
            <td><%= punonjesit[i].Mbiemri %></td>
            <td><%= punonjesit[i].Roli %></td>
            <td><%= punonjesit[i].Adresa %></td>
            <td><%= punonjesit[i].Nr_telefoni %></td>
            <td><%= punonjesit[i].Email %></td>
            <td><%= punonjesit[i].Paga %></td>
            <td>
              <a
                href="/punonjesi/edit/<%= punonjesit[i].E_id %>"
                class="btn btn-primary"
                >Edito</a
              >

              <a
                href="/punonjesi/delete/<%= punonjesit[i].E_id %>"
                class="btn btn-danger"
                >Fshi</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <p><a href="/">Back to Home</a></p>
    </div>
  </body>
</html>
