<!DOCTYPE html>
<html>
  <head>
    <title>Shto abonim</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <%- include('partial/navbar.ejs') %>

  <body>
    <form method="post" action="/abonimi-add">
      <div class="row g-3 ms-4 me-4">
        <div class="form-group col-md-6">
          <label for="abonim_id">Abonim ID</label>
          <input
            type="text"
            class="form-control"
            id="abonim_id"
            name="abonim_id"
          />
        </div>
        <div class="form-group col-md-6">
          <label for="kategoria">Kategoria</label>
          <input
            type="text"
            class="form-control"
            id="kategoria"
            name="kategoria"
          />
        </div>
        <div class="form-group col-md-6">
          <label for="k_id">Klienti Specifikime</label>
          <select class="form-control" id="k_id" name="k_id">
            <% klientiSpecifikime.forEach(function(klienti) { %>
            <option value="<%= klienti.K_id %>">
              <%= klienti.Emer %> <%= klienti.Mbiemer %>
            </option>
            <% }); %>
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="date_fillimi">Date fillimi</label>
          <input
            type="date"
            class="form-control"
            id="date_fillimi"
            name="date_fillimi"
          />
        </div>
        <div class="form-group col-md-6">
          <label for="date_mbarimi">Date mbarimi</label>
          <input
            type="date"
            class="form-control"
            id="date_mbarimi"
            name="date_mbarimi"
          />
        </div>

        <div class="form-group col-md-68 mt-lg-5">
          <button type="submit" class="btn btn-success">Shto abonim</button>
        </div>
      </div>
    </form>
  </body>
</html>
